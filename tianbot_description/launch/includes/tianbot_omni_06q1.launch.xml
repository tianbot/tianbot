<?xml version="1.0"?>

<launch>
    <arg name="robot_name" default="$(optenv TIANBOT_NAME)" doc="robot name [tianbot_No1, tianbot_No2, tianbot_No3, ...]"/>
    <node pkg="tf" type="static_transform_publisher" name="base_footprint2base_link" args="0 0 0.0381 0 0 0 base_footprint base_link 20" />
    <node pkg="tf" type="static_transform_publisher" name="base_link2laser" args="0.12 0 0.1 3.1415926535 0 0 base_link laser 20"/>
    <node pkg="tf" type="static_transform_publisher" name="base_link2imu" args="0.22 0 0.1 0 0 0 base_link imu_link 20"/>
    <node pkg="tf" type="static_transform_publisher" name="base_link2camera" args="0.3 0 0.035 0 0 0 base_link camera_link 20"/>
</launch>
