<?xml version="1.0"?>

<launch>
    <arg name="base" default="$(optenv TIANBOT_BASE tianbot_omni)" doc="mobile base type [tianbot, tianrover, tianbot_omni, tianbot_mini]"/>
    <arg name="car_type" default="$(optenv TIANBOT_BASE_TYPE 06q1)" doc="mobile base type [tianbot, tianrover, tianbot_omni, tianbot_mini]"/>
    <arg name="car_name" default="$(optenv TIANBOT_NAME)" doc="car name [tianbot_No1, tianbot_No2, tianbot_No3, ...]"/>

    <arg name="base_frame" default="base_link"/>
    <arg name="odom_frame" default="odom"/>
    <arg name="scan_topic" default="$(arg car_name)/scan"/>

    <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
        <rosparam file="$(find tianbot_slam)/configuration_files/$(arg base)/$(arg car_type)_hector.yaml" command="load" />
        <param name="map_frame" value="map" />
        <param name="base_frame" value="$(arg base_frame)" />
        <param name="odom_frame" value="$(arg odom_frame)" />
        <param name="scan_topic" value="$(arg scan_topic)"/>
    </node>

</launch>
